<h1>Lists#show</h1>
<div class="card">
  <h2><%= @list.name %></h2>
</div>
<ul class="list-group">
  <% @list.bookmarks.each  do |bookmark| %>
    <li class="list-group-item">
      <%= bookmark.movie.title %>
      <%= link_to "X", bookmark_path(bookmark), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
