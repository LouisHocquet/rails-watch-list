<h1><%= @list.name %></h1>

<div class="banner-blur-background">
  <div>
    <img src=<%= @list.bookmarks.first.movie.poster_url %> alt="">
  </div>
</div>

<div class="container">
  <ul class="list-group mt-3">
    <% @list.bookmarks.each  do |bookmark| %>
      <li class="list-group-item mb-3 p-4 rounded shadow-sm d-flex justify-content-between">
        <h3><%= bookmark.movie.title %></h3>
        <div class="d-flex align-items-center">
          <%= link_to ('<i class="far fa-trash-alt"></i>').html_safe, bookmark_path(bookmark), method: :delete, class: "text-warning" %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to "Create bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mt-1" %>
</div>

